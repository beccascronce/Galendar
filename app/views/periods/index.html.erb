<p id="notice"><%= notice %></p>

<% if on_my_period?(@current_period)%>
  <%= link_to end_period_path do %>
    End Period
  <% end %>

<% else %>
  <%= link_to start_period_path do %>
    Start Period
  <% end %> 
<% end %>

<h1>Periods</h1>

<table <id id="period"></id>>
  <thead>
    <tr>
      <th>Start date</th>
      <th>End date</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @periods.each do |period| %>
      <tr>
        <td><%= period.start_date.strftime("%m/%d/%y") %></td>
        <td><%= period.end_date.strftime("%m/%d/%y") %></td>
        <td><%= period.user_id %></td>
        <td><%= link_to 'Show', period %></td>
        <td><%= link_to 'Edit', edit_period_path(period) %></td>
        <td><%= link_to 'Destroy', period, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>


